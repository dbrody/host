    <div class="container">
      <BR/><BR/>
      <div class="alert alert-danger" id="serverDownError" style="display: none;">Server is down.</div>

      <div class="starter-template">
        <h1>Noam Grid View</h1>
      </div>

      <div id="Channels">
        <table class="table">
          <thead>
            <tr>
              <td>Channel Name</td>
              <td>Last Updated</td>
              <td>Value</td>
            </tr>
          </thead>
          <tbody>

          </tbody>
        </table>
      </div>

